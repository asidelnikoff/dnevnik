FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR ./
COPY ["/TimeTable/TimeTable.csproj", "."]
RUN dotnet restore "TimeTable.csproj"
COPY . .
WORKDIR "/TimeTable"
RUN dotnet build "TimeTable.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "TimeTable.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false 
RUN mkdir https \
    && dotnet dev-certs https -ep "./https/aspnetapp.pfx" --trust -p "Pass1234" \
    && dotnet user-secrets init -p .\TimeTable\TimeTable.csproj \
    && dotnet user-secrets -p TimeTable\TimeTable.csproj set "Kestrel:Certificates:Default:Password" "Pass1234"

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "TimeTable.dll"]